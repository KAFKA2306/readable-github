{
  "manifest_version": 3,
  "name": "ReadableGitHub",
  "version": "2.0.0",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [{
    "matches": ["https://github.com/*"],
    "js": ["content-script.js"],
    "css": ["styles.css"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
